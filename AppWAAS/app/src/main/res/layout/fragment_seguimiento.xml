<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.proyecto.wasa.proyectoandroid.SeguimientoFragment">

    <LinearLayout
        android:id="@+id/LCABEZERA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtCodigoPedido"
            android:text="Codigo"
            android:layout_weight="1"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtDireccionPedido"
            android:text="Direccion"
            android:layout_weight="1"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtFechaPedido"
            android:text="Fecha"
            android:layout_weight="1"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtTotalPedido"
            android:text="Total"
            android:layout_weight="1"
            android:textStyle="bold"/>
    </LinearLayout>
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lv_deslizable"
        android:layout_below="@id/LCABEZERA"/>
</FrameLayout>
